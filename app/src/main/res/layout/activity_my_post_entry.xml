<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <!--tools:context="anyonethere.cs.brandies.edu.anyonetheregithub.myPost_entry"-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:padding="20dp"
        android:background="#d5ffffff">

        <ImageView
            android:id="@+id/detail_statusimg"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/blank_block" />

        <TextView
            android:id="@+id/entry_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:padding="10dp"
            android:text="Request Title"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/entry_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/entry_title"
            android:layout_marginLeft="100dp"
            android:padding="10dp"
            android:text="Request Taker"
            android:textSize="16sp"></TextView>
        <TextView
            android:id="@+id/entry_reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/entry_poster"
            android:padding="10dp"
            android:textSize="16sp"
            android:text="Reward"
            android:layout_marginLeft="100dp">
        </TextView>

        <ImageView
            android:id="@+id/userID"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_face"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/entry_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/entry_reward"
            android:text="Detail" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/userID">

            <RatingBar
                android:id="@+id/userRating"
                style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/userID"
                android:numStars="5"
                android:rating="5"
                android:stepSize="0.1" />
        </LinearLayout>

        <Button
            android:id="@+id/entry_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/entry_reward"
            android:text="CONFIRM" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
