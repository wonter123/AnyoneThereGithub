<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context="anyonethere.cs.brandies.edu.anyonetheregithub.MapsActivity" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_in_map_newPostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:layout_marginLeft="151dp"
        android:layout_marginStart="151dp"
        android:clickable="true"
        android:src="@drawable/post_icon2"
        app:backgroundTint="@android:color/background_light" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_in_map_listButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_in_map_newPostButton"
        android:layout_toEndOf="@+id/button_in_map_newPostButton"
        android:layout_toRightOf="@+id/button_in_map_newPostButton"
        android:clickable="true"
        android:src="@drawable/map_icon2"
        app:backgroundTint="@android:color/background_light" />


</RelativeLayout>

