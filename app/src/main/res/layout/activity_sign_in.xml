<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in_full_2">


    <TextView
        android:id="@+id/sign_in_user_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="255dp"
        android:textColor="#e1104b28"
        android:text="EMAIL"
        android:textSize="7pt" />

    <TextView
        android:id="@+id/sign_in_pass_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sign_in_user_label"
        android:layout_alignStart="@+id/sign_in_user_label"
        android:layout_below="@+id/sign_in_user_label"
        android:layout_marginTop="38dp"
        android:textColor="#e1104b28"
        android:text="PASSWORD"
        android:textSize="7pt" />

    <EditText
        android:id="@+id/sign_in_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sign_in_user_label"
        android:layout_alignBottom="@+id/sign_in_user_label"
        android:layout_toEndOf="@+id/sign_in_pass_label"
        android:layout_toRightOf="@+id/sign_in_pass_label"
        android:autofillHints="Brandeis Email"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Brandeis Email"
        android:selectAllOnFocus="false"
        android:textColor="#e1104b28"
        android:singleLine="false"
        />

    <EditText
        android:id="@+id/sign_in_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sign_in_pass_label"
        android:layout_alignBottom="@+id/sign_in_pass_label"
        android:layout_alignLeft="@+id/sign_in_username"
        android:layout_alignStart="@+id/sign_in_username"
        android:ems="10"
        android:textColor="#e1104b28"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/sign_in_button_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sign_in_pass_label"
        android:layout_alignStart="@+id/sign_in_pass_label"
        android:layout_below="@+id/sign_in_password"
        android:layout_marginTop="61dp"
        android:background="#789890"
        android:elevation="10dp"
        android:text="SIGN UP"
        android:textColor="#ffffff"
        />

    <Button
        android:id="@+id/sign_in_button_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sign_in_button_sign_up"
        android:layout_alignBottom="@+id/sign_in_button_sign_up"
        android:layout_alignEnd="@+id/sign_in_password"
        android:layout_alignRight="@+id/sign_in_password"
        android:background="#789890"
        android:elevation="10dp"
        android:text="SIGN IN"
        android:textColor="#ffffff"
        />


</RelativeLayout>