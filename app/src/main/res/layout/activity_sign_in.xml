<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signin_background">


    <TextView
        android:id="@+id/sign_in_user_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="350dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:text="User Name"
        android:textSize="20dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/sign_in_pass_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_in_user_label"
        android:layout_alignLeft="@+id/sign_in_user_label"
        android:layout_alignStart="@+id/sign_in_user_label"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="Password" />

    <EditText
        android:id="@+id/sign_in_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sign_in_user_label"
        android:layout_alignBottom="@+id/sign_in_user_label"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/sign_in_user_label"
        android:layout_toRightOf="@+id/sign_in_user_label"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/sign_in_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sign_in_pass_label"
        android:layout_alignBottom="@+id/sign_in_pass_label"
        android:layout_alignLeft="@+id/sign_in_username"
        android:layout_alignStart="@+id/sign_in_username"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/sign_in_button_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sign_in_pass_label"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/sign_in_pass_label"
        android:layout_marginBottom="44dp"
        android:text="SIGN UP" />

    <Button
        android:id="@+id/sign_in_button_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sign_in_button_sign_up"
        android:layout_alignBottom="@+id/sign_in_button_sign_up"
        android:layout_alignEnd="@+id/sign_in_password"
        android:layout_alignRight="@+id/sign_in_password"
        android:text="SIGN IN" />


</RelativeLayout>